            </div>
        </div>
    </div>
</section>
<!-- Categories Section End -->
<!-- Featured Section Begin -->
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Featured Meals</h2>
                </div>
                <div class="featured__controls">
                    <ul>
                        @foreach (var dietType in Model.DietTypes)
                        {
                            var isActive = dietType.Equals("Keto", StringComparison.OrdinalIgnoreCase) ? "active" : "";
                            <li class="@isActive" data-filter=".@dietType.ToLower().Replace(" ", "-")">@dietType</li>
                        }
                    </ul>
                </div>
                <div class="row featured__filter">
                    @foreach (var meal in Model.FeaturedMeals)
                    {
                        var mealClasses = meal.DietType.ToLower().Replace(" ", "-");
                        var isVisible = meal.DietType.Equals("Keto", StringComparison.OrdinalIgnoreCase) ? "block" : "none";
                        <div class="col-lg-3 col-md-4 col-sm-6 mix @mealClasses" style="display: @isVisible;">
                            <div class="featured__item">
                                <div class="featured__item__pic set-bg" data-setbg="@meal.ImageUrl">
                                    <ul class="featured__item__pic__hover">
                                        <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                        <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                        <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                                    </ul>
                                </div>
                                <div class="featured__item__text">
                                    <h6><a href="#">@meal.Name</a></h6>
                                    <h5>@meal.Price.ToString("C")</h5>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Featured Section End -->
