                        <li>@Html.ActionLink("Pescatarian", "Shop", "User", new { dietType = "Pescatarian" }, null)</li>
                        <li>@Html.ActionLink("Low Sodium", "Shop", "User", new { dietType = "Low Sodium" }, null)</li>
                        <li>@Html.ActionLink("Keto", "Shop", "User", new { dietType = "Keto" }, null)</li>
                        <li>@Html.ActionLink("Low Carb", "Shop", "User", new { dietType = "Low Carb" }, null)</li>
                        <li>@Html.ActionLink("Mediterranean", "Shop", "User", new { dietType = "Mediterranean" }, null)</li>
                        <li>@Html.ActionLink("Vegetarian", "Shop", "User", new { dietType = "Vegetarian" }, null)</li>
                        <li>@Html.ActionLink("Vegan", "Shop", "User", new { dietType = "Vegan" }, null)</li>
                        <li>@Html.ActionLink("Gluten Free", "Shop", "User", new { dietType = "Gluten Free" }, null)</li>
                        <li>@Html.ActionLink("Paleo", "Shop", "User", new { dietType = "Paleo" }, null)</li>
                        <li>@Html.ActionLink("Whole30", "Shop", "User", new { dietType = "Whole30" }, null)</li>
                        <li>@Html.ActionLink("Dairy Free", "Shop", "User", new { dietType = "Dairy Free" }, null)</li>
                        <li>@Html.ActionLink("Low Fat", "Shop", "User", new { dietType = "Low Fat" }, null)</li>
                    </ul>
                </div>
            </div>

            <div class="col-lg-9">
                <div class="hero__search">
                    <div class="hero__search__form">
                        <form action="#">
                            <div class="hero__search__categories">
                                All Diets
