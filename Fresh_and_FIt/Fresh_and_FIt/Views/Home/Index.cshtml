
@model Fresh_and_FIt.Models.HomeViewModel


@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/main_layout.cshtml";
}

<style>
    .hero__item {
        position: relative;
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }

    .hero__overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.2); /* Black with 50% opacity */
        z-index: 1; /* Ensures the overlay is above the image but below the text */
    }

    .hero__text {
        z-index: 2; /* Ensures the text is above the overlay */
        color: white; /* White text for better readability */
        text-align: left;
        padding: 20px;
        padding-top: 150px;
    }

        .hero__text h2 {
            font-size: 46px;
            color: #ffffff; /* Set the font color to white */
            line-height: 52px;
            font-weight: 700;
            margin: 10px 0;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.6); /* Add a shadow effect */
        }
</style>

<!-- Hero Section Begin -->
<section class="hero">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
